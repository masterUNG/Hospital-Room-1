<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kaewmod.hospitalroom.DiseaselegActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout7">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <ImageView
                android:layout_width="41dp"
                android:layout_height="42dp"
                android:id="@+id/imageView52"
                android:background="@drawable/homme1"
                android:onClick="clickMenuNurseLeg"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="13dp"
                android:layout_marginEnd="13dp"
                android:layout_weight="0.19" />

            <TextView
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:text="@string/Disleg"
                android:id="@+id/textView71"
                android:textSize="@dimen/h2"
                android:textColor="#ffffff"
                android:background="#b30051ff"
                android:textStyle="normal|bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TableLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Disease10"
        android:id="@+id/textView73"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView72"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/h5"
        android:background="#bfffffff"
        android:textColor="#000000"
        android:onClick="clickDisleg2" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Disease9"
        android:id="@+id/textView72"
        android:layout_marginTop="39dp"
        android:textSize="@dimen/h5"
        android:background="#bfffffff"
        android:textColor="#000000"
        android:onClick="clickDisleg1"
        android:layout_below="@+id/imageView34"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="180dp"
        android:id="@+id/imageView34"
        android:background="@drawable/hbll3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/linearLayout7"
        android:layout_centerHorizontal="true"
        android:layout_height="120dp" />

</RelativeLayout>
