<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kaewmod.hospitalroom.NurseActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pum_02"
        android:id="@+id/imageView25"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="123dp"
        android:onClick="clickNurseHead" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/pum_03"
        android:id="@+id/imageView50"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp"
        android:layout_toStartOf="@+id/linearLayout28"
        android:onClick="clickNurseBody" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView50"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/imageView50"
        android:weightSum="1">

        <ImageView
            app:srcCompat="@drawable/pum_04"
            android:id="@+id/imageView58"
            android:layout_width="179dp"
            android:layout_height="50dp"
            android:onClick="clickNurseLeg" />
    </LinearLayout>

    <ImageView
        app:srcCompat="@drawable/doctor"
        android:id="@+id/imageView57"
        android:layout_height="500dp"
        android:layout_width="350dp"
        android:layout_above="@+id/imageView50"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="17dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/home"
        android:id="@+id/imageView60"
        android:onClick="clickNurseHomemenu"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/Nurse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="@dimen/h2"
        android:textColorLink="@color/colorAccent"
        android:textColor="#5e53fe"
        android:layout_weight="1"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/imageView60"
        android:layout_toRightOf="@+id/imageView60"
        android:layout_toEndOf="@+id/imageView60"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

</RelativeLayout>
