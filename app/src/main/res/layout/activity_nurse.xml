<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kaewmod.hospitalroom.NurseActivity"
    android:background="@drawable/bggg">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout23">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Okhbl"
                android:id="@+id/textView11"
                android:textColor="#000000"
                android:textSize="@dimen/h5"
                android:layout_gravity="center_horizontal" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:id="@+id/imageView50"
                    android:background="@drawable/nurseee" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Head"
                    android:id="@+id/textView12"
                    android:textSize="@dimen/h2"
                    android:paddingBottom="20dp"
                    android:textColor="#ffffff"
                    android:onClick="clickNurseHead"
                    android:layout_alignBaseline="@+id/textView13"
                    android:layout_alignBottom="@+id/textView13"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Body"
                    android:id="@+id/textView13"
                    android:textSize="@dimen/h2"
                    android:paddingBottom="20dp"
                    android:textColor="#ffffff"
                    android:onClick="clickNurseBody"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/textView12"
                    android:layout_toEndOf="@+id/textView12"
                    android:layout_marginLeft="67dp"
                    android:layout_marginStart="67dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Leg"
                    android:id="@+id/textView33"
                    android:textSize="@dimen/h2"
                    android:textColor="#ffffff"
                    android:onClick="clickNurseleg"
                    android:layout_alignTop="@+id/textView13"
                    android:layout_toLeftOf="@+id/imageView25"
                    android:layout_toStartOf="@+id/imageView25"
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView25"
                    android:layout_gravity="right"
                    android:background="@drawable/home"
                    android:onClick="clickHomeMenuNurse"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
