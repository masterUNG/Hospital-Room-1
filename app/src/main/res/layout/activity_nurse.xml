<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kaewmod.hospitalroom.NurseActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

    </LinearLayout>

    <TextView
        android:text="@string/Nurse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="@dimen/h2"
        android:textColorLink="@color/colorAccent"
        android:textColor="#5e53fe"
        android:layout_weight="1"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/imageView60"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/homme1"
        android:id="@+id/imageView60"
        android:onClick="clickNurseHomemenu"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/hbll2"
        android:id="@+id/imageView50"
        android:onClick="clickNurseBody"
        android:layout_alignTop="@+id/imageView58"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@drawable/hbll3"
        android:id="@+id/imageView58"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:onClick="clickNurseLeg"
        android:layout_marginBottom="19dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/doctor"
        android:id="@+id/imageView4"
        android:layout_marginBottom="33dp"
        android:layout_alignBottom="@+id/imageView25"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/hbll1"
        android:id="@+id/imageView25"
        android:onClick="clickNurseHead"
        android:layout_above="@+id/imageView50"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
