                    android:text="@string/Sick4"
                    android:id="@+id/button7"
                    android:textSize="@dimen/h8"
                    android:textColor="#ffffff"
                    android:background="@drawable/button"
                    android:layout_weight="0.20"
                    android:textStyle="normal|bold" />

