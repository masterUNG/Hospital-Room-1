                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/Sick5"
                    android:id="@+id/button8"
                    android:textSize="@dimen/h8"
                    android:textColor="#ffffff"
                    android:background="@drawable/button"
                    android:layout_weight="0.60"
                    android:textStyle="normal|bold" />

                <Button
                    android:layout_width="104dp"
                    android:layout_height="match_parent"
                    android:text="@string/Sick6"
                    android:id="@+id/button9"
                    android:textSize="@dimen/h8"
                    android:textColor="#ffffff"
                    android:background="@drawable/button"
                    android:layout_weight="0.20"
                    android:textStyle="normal|bold" />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="87dp"
                android:id="@+id/imageView12"
                android:background="@drawable/sick4"
                android:layout_weight="0.25" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView13"
                android:background="@drawable/sick5"
                android:layout_weight="0.25" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="93dp"
                android:id="@+id/imageView14"
                android:background="@drawable/sick6" />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <Button
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:text="@string/Sick77"
                android:id="@+id/button12"
                android:textSize="@dimen/h8"
                android:textColor="#ffffff"
                android:background="@drawable/button"
                android:layout_weight="0.36"
                android:textStyle="normal|bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/Sick88"
                android:id="@+id/button13"
                android:textSize="@dimen/h8"
                android:textColor="#ffffff"
                android:background="@drawable/button"
                android:textStyle="normal|bold" />

            <Button
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:text="@string/Sick99"
                android:id="@+id/button14"
                android:textSize="@dimen/h8"
                android:textColor="#ffffff"
                android:background="@drawable/button"
                android:layout_weight="0.60"
                android:textStyle="normal|bold" />


