<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kaewmod.hospitalroom.SickActivity"
    android:background="#c80da2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:id="@+id/linearLayout3">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="319dp"
                android:id="@+id/imageView3"
                android:src="@drawable/ไม่สบาย"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.56" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Sick4"
                    android:id="@+id/button4"
                    android:textSize="@dimen/h1"
                    android:layout_gravity="bottom"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Sick5"
                    android:id="@+id/button8"
                    android:textSize="@dimen/h1"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Sick6"
                    android:id="@+id/button9"
                    android:textSize="@dimen/h1"
                    android:layout_gravity="bottom"
                    android:layout_weight="1" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Seve"
                android:id="@+id/button10"
                android:textSize="@dimen/h2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#ea9797" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/Sick1"
            android:id="@+id/button7"
            android:textSize="@dimen/h1"
            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/Sick2"
            android:id="@+id/button5"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/h1" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/Sick3"
            android:id="@+id/button6"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/h1" />

    </LinearLayout>

</RelativeLayout>
