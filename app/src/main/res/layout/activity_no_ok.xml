<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kaewmod.hospitalroom.NoOkActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
    </LinearLayout>

    <Button
        android:text="@string/Ok"
        android:layout_width="150dp"
        android:id="@+id/button11"
        android:textSize="@dimen/h2"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:textColor="@android:color/background_light"
        android:elevation="0dp"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/imageView59"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <Button
        android:text="@string/No1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button2"
        android:textSize="@dimen/h2"
        android:background="@drawable/button"
        android:textColor="@android:color/background_light"
        android:onClick="clickNoOkGosick"
        android:layout_alignBaseline="@+id/button11"
        android:layout_alignBottom="@+id/button11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        app:srcCompat="@drawable/homme1"
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="clickHomeManuNook" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/good"
        android:id="@+id/textView18"
        android:textSize="@dimen/h4"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="#5e53fe"

        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView59"
        android:layout_alignEnd="@+id/imageView59" />

    <ImageView
        android:layout_width="300dp"
        app:srcCompat="@drawable/dortor3"
        android:id="@+id/imageView59"
        android:layout_height="180dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>