<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kaewmod.hospitalroom.MenuActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"></LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo_hospital"
        android:id="@+id/hospital"
        android:layout_above="@+id/imageView30" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Menu6"
        android:id="@+id/button31"
        android:textSize="@dimen/h"
        android:layout_below="@+id/imageView29"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickMenuYoga"
        android:layout_alignRight="@+id/imageView29"
        android:layout_alignEnd="@+id/imageView29"
        tools:textStyle="bold"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Menu3"
        android:id="@+id/button33"
        android:textSize="@dimen/h"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:onClick="clickMenuBody"
        tools:textStyle="bold"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/button31"
        android:layout_alignBottom="@+id/button31"
        android:layout_alignRight="@+id/imageView30"
        android:layout_alignEnd="@+id/imageView30"
        android:layout_toEndOf="@+id/textView74"
        android:layout_alignStart="@+id/imageView27" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView74"
        android:textColor="#5e53fe"
        android:textSize="@dimen/h4"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="145dp"
        android:id="@+id/imageView29"
        android:background="@drawable/yoga"
        android:onClick="clickMenuYoga"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textView74"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="145dp"
        android:id="@+id/imageView28"
        android:background="@drawable/medi"
        android:onClick="clickMenuMadchin"
        android:layout_weight="1"
        android:layout_above="@+id/button30"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView27"
        android:background="@drawable/halety"
        android:onClick="clickMenuSave"
        android:layout_above="@+id/button32"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_height="145dp"
        android:id="@+id/imageView30"
        android:background="@drawable/three"
        android:onClick="clickMenuBody"
        android:layout_width="150dp"
        android:layout_above="@+id/button33"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Menu4"
        android:id="@+id/button30"
        android:textSize="@dimen/h"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:onClick="clickMenuSave"
        tools:textStyle="bold"
        android:textStyle="normal|bold"
        android:layout_below="@+id/imageView27"
        android:layout_alignStart="@+id/imageView27"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/person1"
        android:id="@+id/imageView15"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button15" />

    <Button
        android:text="Add Person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button15"
        android:background="@drawable/button"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:textSize="@dimen/h"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Menu5"
        android:id="@+id/button32"
        android:textSize="@dimen/h"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:onClick="clickMenuMadchin"
        tools:textStyle="bold"
        android:textStyle="normal|bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_above="@+id/imageView15"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/imageView28" />

</RelativeLayout>
